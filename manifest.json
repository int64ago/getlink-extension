{
  "manifest_version": 2,
  "name": "Get Link!",
  "version": "3.0.1",
  "description": "Click && Get Link!",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png",
    "512": "images/icon512.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "externally_connectable": {
    "matches": [
      "https://get-link.xyz/*"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "js/content.js"
      ]
    }
  ],
  "permissions": [
    "contextMenus",
    "notifications"
  ]
}